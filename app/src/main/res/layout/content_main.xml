<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_graund"
    android:id="@+id/conteiner"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.al.calculatorcharacter.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Hero"
        tools:layout="@layout/fragment_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_hero"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Enemy1"
        tools:layout="@layout/fragment_enemy1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemy1"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Enemy2"
        tools:layout="@layout/fragment_enemy2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemy2"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Enemy3"
        tools:layout="@layout/fragment_enemy3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemy3"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Enemy4"
        tools:layout="@layout/fragment_enemy4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemy4"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.Enemy5"
        tools:layout="@layout/fragment_enemy5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemy5"/>

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.HeroesStats"
        tools:layout="@layout/fragment_heroes_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_heroes_stats"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:name="com.example.al.calculatorcharacter.Fragments.EnemysStats"
        tools:layout="@layout/fragment_enemys_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_enemys_stats"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/countMatchesET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/heroesTextColor"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/countMatchesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/countMatchesET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:textColor="@color/heroesTextColor"
        android:text="@string/countMatches"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/vsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vs"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="309dp"
        android:onClick="onClickVS"
        android:layout_below="@+id/countMatchesTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:visibility="invisible"/>

</RelativeLayout>
